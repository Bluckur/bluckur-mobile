<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BluckurWallet.UILayer.ShopItemPage">
    <ContentPage.Content>
        <ScrollView>
            <StackLayout Margin="20, 0, 20, 20">
                <StackLayout  VerticalOptions="Start" HorizontalOptions="FillAndExpand">
                    <Label x:Name="lblProductName" FontSize="Large" Text="-" FontAttributes="Bold"></Label>
                    <Label x:Name="lblInStock" TextColor="#d9534f" Text="Out of Stock"></Label>
                </StackLayout>
                <StackLayout HorizontalOptions="FillAndExpand">
                    <Image x:Name="imgProductImage" HeightRequest="100" Margin="0, 30"></Image>
                </StackLayout>
                <Grid>
                    <Entry Placeholder="0" Grid.Row="0" Keyboard="Numeric"></Entry>
                    <Button Text="Add to Cart" Grid.Column="1" TextColor="White" BackgroundColor="#e88506"></Button>
                </Grid>
                <Label Margin="0, 20, 0, 0" FontAttributes="Bold">Description</Label>
                <Label x:Name="lblDescription" LineBreakMode="WordWrap"></Label>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
