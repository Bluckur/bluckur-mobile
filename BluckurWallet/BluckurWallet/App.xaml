<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="BluckurWallet.App">
    <Application.Resources>
        <ResourceDictionary>
            <Style x:Key="pageContainer" TargetType="StackLayout">
                <Setter Property="Padding" Value="20, 20, 20, 20" />
            </Style>
            <Style x:Key="button" TargetType="Button">
                <Setter Property="TextColor" Value="White" />
                <Setter Property="BackgroundColor" Value="#e88506"/>
            </Style>
            <Style x:Key="dividerLine" TargetType="BoxView">
                <Setter Property="HeightRequest" Value="1" />
                <Setter Property="Color" Value="#e5e5e5" />
                <Setter Property="Margin" Value="0, 20, 0, 20" />
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
